<% if @common_area_fee_histories.any? %>
  <hr>
  <div class="mt-3 d-flex justify-content-center">
    <div class="accordion shadow-sm w-75">
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#common_area_<%= @common_area.id %>" aria-expanded="false" aria-controls="common_area_<%= @common_area.id %>">
            <%= I18n.t('views.show.show_history') %>
          </button>
        </h2>
        <div id="common_area_<%= @common_area.id %>" class="accordion-collapse collapse" data-bs-parent="#admin-accordion">
          <div class="accordion-body">
            <% @common_area_fee_histories.each do |history_fee| %>
              <span class="text-lowercase fs-8 text-muted"><%= I18n.t('views.show.email') %></span>
              <span class="fs-7"><%= history_fee.admin.email %></span><br>
              <span class="text-lowercase fs-8 text-muted"><%= I18n.t('views.show.update_date') %></span>
              <span class="fs-7"><%= history_fee.created_at.strftime('%d/%m/%Y') %></span>
              <span class="text-lowercase fs-8 text-muted"><%= I18n.t('views.show.fee') %></span>
              <span class="fs-7"><%= Money.new(history_fee.value_cents, 'BRL').format %></span>
              <% unless history_fee == @common_area_fee_histories.last %>
                <hr class="divider">
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
