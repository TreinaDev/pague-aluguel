<div>
  <h2 class="container text-center">Criar Taxa</h2>
</div>


<% if @common_area.errors.any? %>
  <div class="container text-center">

    <h3>Atente-se aos erros abaixo:</h3>
    
    <ul>
      <% @common_area_errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
    
  </div>
<% end %>
<div class="container text-center p-4 shadow rounded-4 col-4">
  <div class="">
    <%= form_with model: [@common_area.condo, @common_area] do |f| %>
      <div>
        <%= f.label :fee, class: "form-label" %>
        <%= f.number_field :fee, class: "form-control" %>
      </div>
      <%= f.submit "Atualizar", class:"btn btn-primary mt-3" %>
    <% end %>
  </div>
</div>