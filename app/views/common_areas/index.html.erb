<div>
  <%= link_to 'Voltar', condo_path(@condo.id), class:"btn btn-primary" %>
</div>

<div class="container d-flex justify-content-center">

  <div class="container text-center">
    <h2><%= I18n.t('views.index.name', name: @condo.name)</h2>

    <% if @common_areas.present? %>
      <div class="container col-7 mt-5">

        <% @common_areas.each_with_index do |area, index| %>
          <div id="<%= "area-#{index}"%>" class="mb-4">
            <%= link_to condo_common_area_path(@condo.id, area), class: "link-container d-flex justify-content-center", style:"text-decoration:none;" do %>
              <div class="rounded-4 shadow p-4 col-12"  >
                <div class="d-flex justify-content-between mb-3">
                  <h3 class="align-self-center"><%= area.name %></h3>
                  <p class="align-self-center mb-0">
                    <%= I18n.t('views.index.fee') %>
                    <strong><%= area.fee_cents.zero? ? I18n.t('views.index.no_fee') : Money.new(area.fee_cents, 'BRL').format %></strong>
                  </p>
                </div>
                <hr>
                <div class="text-center">
                  <span class="mb-0"><%= area.description %></span>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>

      </div>
    <% else %>
  </div>

    <div class="mt-4 container text-center">
      <p><%= I18n.t('views.index.no_common_area') %></p>
    </div>
  <% end %>

</div>
