<% if @single_charge.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <p><%= I18n.t('errors.messages.verify_error') %></p>
    <ul>
      <% @single_charge.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="mt-3 card bg-off-white rounded-0 border-0" data-controller="toggle-installments-field">
  <%= link_to condo_path(@condo.id), class: "ms-3 mt-3" do %>
    <%= image_tag "arrow-left", size: "25", id: 'arrow-left' %>
  <% end %>

  <span class="fs-4 mx-auto mt-3 text-uppercase">
    <%= I18n.t('views.new.create_single_charge') %>
  </span>
  <span class="mx-auto text-uppercase fs-7 text-muted"><%= @condo.name %></span>

  <%= form_with model: [@single_charge], url: condo_single_charges_path(@condo.id), local: true do |f| %>
    <div class="form-floating mb-3 w-50 mx-auto">
      <%= f.select :charge_type, options_for_select(SingleCharge.charge_types.map { |key, _| [I18n.t("single_charge.#{key}"), key] }, @single_charge.charge_type), {}, class: "form-control" %>
      <%= f.label :charge_type %>
    </div>

    <div class="form-floating mb-3 w-50 mx-auto">
      <%= f.select :common_area_id, options_for_select(@common_areas.map { |key, _| [key.name, key.id] }, @single_charge.common_area_id), {prompt: ''}, class: "form-control" %>
      <%= f.label :common_area_id %>
    </div>

    <div class="form-floating mb-3 w-50 mx-auto">
      <%= f.text_field :unit_id, class: "form-control" %>
      <%= f.label :unit_id %>
    </div>

    <div class="form-floating mb-3 w-50 mx-auto">
      <%= f.text_field :description, class: "form-control" %>
      <%= f.label :description %>
    </div>

    <div class="form-floating mb-3 w-50 mx-auto">
      <%= f.text_field :value, class: "form-control" %>
      <%= f.label :value %>
    </div>

    <div class="form-floating mb-3 w-50 mx-auto">
      <%= f.date_field :issue_date, class: "form-control" %>
      <%= f.label :issue_date %>
    </div>

    <div class="text-center">
      <%= f.submit I18n.t('helpers.submit.register'), class: 'btn btn-primary mb-5 fs-7 text-uppercase ls-3' %>
    </div>
  <% end %>
</div>
