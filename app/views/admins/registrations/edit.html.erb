<%= turbo_frame_tag "modal" do %>
  <div class="dean-modal">
    <div class="mb-3">
      <%= link_to "", :back, class: "btn btn-close btn-sm" %>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "admins/shared/error_messages", resource: resource %>

      <div class="form-floating mb-3 w-75 mx-auto">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        <%= f.label :email %>
      </div>

      <div class="form-floating mb-3 w-75 mx-auto">
        <% if @minimum_password_length %>
          <span class="text-muted mx-auto"><%= @minimum_password_length %> caractéres mínimos</span>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <%= f.label :password %> <i class="text-muted">(deixe em branco se não quiser mudar)</i>
      </div>

      <div class="form-floating mb-3 w-75 mx-auto">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        <%= f.label :password_confirmation %>
      </div>

      <div class="form-floating mb-3 w-75 mx-auto">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
        <%= f.label :first_name %>
      </div>

      <div class="form-floating mb-3 w-75 mx-auto">
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
        <%= f.label :last_name %>
      </div>

      <div class="mb-2 text-center">
        <%= f.label :photo %>
        <%= f.file_field :photo %>
      </div>

      <div class="text-center">
        <%= f.submit "Salvar", class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
<% end %>
