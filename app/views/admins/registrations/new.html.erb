<div class="mt-3 card rounded-0 border-0">
  <%= link_to :back, class: "ms-3 mt-3" do %>
    <%= image_tag "arrow-left", size: "25" %>
  <% end %>

  <span class="fs-4 mx-auto mt-3 text-uppercase">
    <%= I18n.t('devise.registrations.new.sign_up_admin') %>
  </span>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "admins/shared/error_messages", resource: resource %>

    <div class="form-floating mb-3 w-50 mx-auto mt-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      <%= f.label :email %>
    </div>

    <% if @minimum_password_length %>
      <div class="w-50 mx-auto">
        <em class="text-muted">(MÃ­nimo <%= @minimum_password_length %> caracteres)</em>
      </div>
    <% end %>

    <div class="form-floating mb-3 w-50 mx-auto">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <%= f.label :password %>
    </div>

    <div class="form-floating mb-3 w-50 mx-auto">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      <%= f.label :password_confirmation %>
    </div>

    <div class="form-floating mb-3 w-50 mx-auto">
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
      <%= f.label :first_name %>
    </div>

    <div class="form-floating mb-3 w-50 mx-auto">
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
      <%= f.label :last_name %>
    </div>

    <div class="form-floating mb-3 w-50 mx-auto">
      <%= f.text_field :document_number, autofocus: true, autocomplete: "document_number", "data-controller": "document-number", class: "form-control" %>
      <%= f.label :document_number %>
    </div>

    <div class="form-floating mb-3 w-50 mx-auto">
      <%= f.file_field :photo, multiple: true, accept:'image/*', class: "form-control" %>
      <%= f.label :photo %>
    </div>

    <div class="text-center">
      <%= f.submit I18n.t('helpers.submit.register'), class: "btn btn-primary mb-5 mt-1" %>
    </div>
  <% end %>
</div>
