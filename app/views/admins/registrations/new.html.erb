<h2>Registro de Administrador</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "admins/shared/error_messages", resource: resource %>

  <div class="form-floating mb-2 w-50">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    <%= f.label :email %>
  </div>

  <% if @minimum_password_length %>
  <em class="text-muted">(MÃ­nimo <%= @minimum_password_length %> caracteres)</em>
  <% end %>
  <div class="form-floating mb-2 w-50">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <%= f.label :password %>
  </div>

  <div class="form-floating mb-2 w-50">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    <%= f.label :password_confirmation %>
  </div>

  <div class="form-floating mb-2 w-50">
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
    <%= f.label :first_name %>
  </div>

  <div class="form-floating mb-2 w-50">
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
    <%= f.label :last_name %>
  </div>

  <div class="form-floating mb-2 w-50">
    <%# , "data-controller": "document-number" %>
    <%= f.text_field :document_number, autofocus: true, autocomplete: "document_number", "data-controller": "document-number", class: "form-control" %>
    <%= f.label :document_number %>
  </div>

  <div class="mb-2">
    <%= f.label :photo %>
    <%= f.file_field :photo %>
  </div>

  <div class="actions">
    <%= f.submit "Registrar", class: "btn btn-secondary" %>
  </div>
<% end %>
