<h2>Registrar novo admin</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "admins/shared/error_messages", resource: resource %>

  <div class="form-floating">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <%= f.label :email %>
  </div>

  <div class="form-floating">
    <% if @minimum_password_length %>
    <em>(MÃ­nimo <%= @minimum_password_length %> caracteres)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <%= f.label :password %>
  </div>

  <div class="form-floating">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    <%= f.label :password_confirmation %>
  </div>

  <div class="form-floating">
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    <%= f.label :first_name %>
  </div>

  <div class="form-floating">
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    <%= f.label :last_name %>
  </div>

  <div class="form-floating">
    <%= f.text_field :document_number, autofocus: true, autocomplete: "document_number" %>
    <%= f.label :document_number %>
  </div>

  <div class="actions">
    <%= f.submit "Registrar" %>
  </div>
<% end %>
