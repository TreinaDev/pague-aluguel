<%= turbo_frame_tag "modal" do %>
  <div class="dean-modal modal-md">
    <div class="mb-3">
      <%= link_to "", :back, class: "btn btn-close btn-sm" %>
    </div>

    <span class="d-block fs-4 mt-3 text-uppercase text-center">
      <%= I18n.t('devise.registrations.new.sign_up_admin') %>
    </span>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "admins/shared/error_messages", resource: resource %>

      <div class="form-floating mb-3 w-75 mx-auto mt-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        <%= f.label :email %>
      </div>

      <% if @minimum_password_length %>
        <div class="w-75 mx-auto">
          <em class="text-muted">(MÃ­nimo <%= @minimum_password_length %> caracteres)</em>
        </div>
      <% end %>

      <div class="form-floating mb-3 w-75 mx-auto">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <%= f.label :password %>
      </div>

      <div class="form-floating mb-3 w-75 mx-auto">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        <%= f.label :password_confirmation %>
      </div>

      <div class="form-floating mb-3 w-75 mx-auto">
        <%= f.text_field :first_name, autocomplete: "first_name", class: "form-control" %>
        <%= f.label :first_name %>
      </div>

      <div class="form-floating mb-3 w-75 mx-auto">
        <%= f.text_field :last_name, autocomplete: "last_name", class: "form-control" %>
        <%= f.label :last_name %>
      </div>

      <div class="form-floating mb-3 w-75 mx-auto">
        <%= f.text_field :document_number, autocomplete: "document_number", "data-controller": "document-number", class: "form-control" %>
        <%= f.label :document_number %>
      </div>

      <div class="d-flex justify-content-center">
        <div class="form-check form-switch mb-2">
          <%= f.check_box :super_admin, class: "form-check-input" %>
          <%= f.label :super_admin, class: "form-check-label" %>
        </div>
      </div>

      <div class="form-floating mb-3 w-75 mx-auto">
        <%= f.file_field :photo, class: "form-control" %>
        <%= f.label :photo %>
      </div>

      <div class="text-center">
        <%= f.submit I18n.t('helpers.submit.register'), class: "btn btn-primary fs-7 text-uppercase ls-3 mb-5 mt-1" %>
      </div>
    <% end %>
  </div>
<% end %>
