<%= turbo_frame_tag "modal" do %>
  <div class="dean-modal modal-md limit-height">
    <div class="mb-3">
      <%= link_to "", root_path, class: "btn btn-close btn-sm" %>
    </div>

    <div class="text-center">
      <span class="d-block fs-4 mt-3 text-uppercase">
        <%= I18n.t('views.index.manage_condos_access') %>
      </span>
      <span class="mx-auto text-uppercase fs-7 text-muted"><%= capitalized_name(@admin) %></span>
    </div>

    <%= form_with(model: @admins, url: condos_selection_post_admin_path(@admin), method: :post) do |f| %>
      <div class="mt-3 mb-3">
        <%= f.collection_check_boxes :condo_ids, Condo.all, :id, :name, { multiple: true, checked: @present_associations.map(&:condo_id) }, { class: "form-check-input" } do |b| %>
          <div class="form-check">
            <%= b.check_box %>
            <%= b.label class: "form-check-label" do %>
              <%= b.text %>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="text-center">      
        <%= f.submit I18n.t('helpers.submit.submit'), class: "btn btn-primary text-uppercase fs-7 ls-3" %>
      </div>
    <% end %>
  </div>
<% end %> 
