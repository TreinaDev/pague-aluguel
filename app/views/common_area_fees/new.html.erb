<%= turbo_frame_tag "modal" do %>
  <div class="dean-modal modal-sm">
    <%= link_to "", :back, class: "btn btn-close btn-sm" %>
    <span class="fs-8 text-center d-block"><%= I18n.t('activemodel.models.common_area.other') %></span>
    <span class="fs-3 text-center d-block"><%= @common_area.name%></span>
    <hr>
    <% if @common_area_fee.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <p><%= I18n.t('errors.messages.verify_error') %></p>
        <ul>
          <% @common_area_fee.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @common_area_fee, url: condo_common_area_common_area_fees_path(@condo_id, @common_area_id) do |f| %>
      <%= f.hidden_field :common_area_id, value: @common_area_id %>

      <div class="form-floating mt-3">
        <%= f.text_field :value, placeholder: '0,00', class: "form-control" %>
        <%= f.label :value, class: "form-label" %>
      </div>

      <div class="mt-3 d-flex justify-content-end">
        <%= f.submit I18n.t('helpers.submit.update'), class: "btn btn-primary fs-7 text-uppercase ls-3 me-1" %>
        <%= link_to I18n.t('helpers.submit.cancel'), condo_common_area_path(@condo_id, @common_area_id), class: "btn btn-danger fs-7 text-uppercase ls-3" %>
      </div>
    <% end %>
  </div>
<% end %>
