<div class="card border-0 rounded-0 bg-off-white mt-4 py-3 px-3">
  <%= form_with url: root_path, id: "get_tenant_bill" do |f| %>
    <p class="text-uppercase text-center fs-5 mt-4 ls-3">acesse sua fatura</p>
    <div class="d-flex mt-3 w-50 mx-auto">
      <%= f.text_field :get_tenant_bill, placeholder: "informe seu cpf", class: "form-control me-2" %>
      <%= f.submit 'Buscar', class: "btn btn-primary text-uppercase fs-7 ls-3", data: { turbo_frame: "modal" } %>
    </div>
  <% end %>
</div>
