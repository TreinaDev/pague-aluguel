<%= turbo_frame_tag "modal" do %>
  <div class="dean-modal modal-sm">
    <div class="mb-3">
      <%= link_to "", :back, class: "btn btn-close btn-sm" %>
    </div>

    <span class="fs-4 text-uppercase d-block text-center mb-2">
      <%= I18n.t('devise.sessions.choose_profile') %>
    </span>

    <div class="d-flex justify-content-center gap-2 mb-2 mt-2">
      <%= link_to new_admin_session_path, class: "text-decoration-none", data: { turbo_frame: "modal" } do %>
        <div class="card hover-strong shadow-sm" style="width: 20rem; height: 6rem;">
          <div class="card-body text-center">
            <span class="d-block text-uppercase fw-bolder fs-5 text-muted">
              <%= Admin.model_name.human %>
            </span>
            <span class="d-block fs-8 text-muted">
              <%= I18n.t('admin_description') %>
            </span>
          </div>
        </div>
      <% end %>
    </div>

    <div class="d-flex justify-content-center gap-2 mb-2 mt-3">
      <%= link_to new_property_owner_session_path, class: "text-decoration-none", data: { turbo_frame: "modal" } do %>
        <div class="card hover-strong shadow-sm" style="width: 20rem; height: 6rem;">
          <div class="card-body text-center">
            <span class="d-block text-uppercase fw-bolder fs-5 text-muted">
              <%= PropertyOwner.model_name.human %>
            </span>
            <span class="d-block fs-8 text-muted">
              <%= I18n.t('property_description') %>
            </span>
          </div>
        </div>
      <% end %>
    </div>

    <div class="d-flex justify-content-center mb-2 mt-2">
      <%= image_tag "logo-pa", class: "w-20" %>
    </div>
  </div>
<% end %>