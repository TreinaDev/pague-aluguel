<div class="card border-0 rounded-0 bg-off-white mt-4 py-3 px-3 w-50">
  <div class="text-muted fs-8">
    <%= image_tag "user-icon", size: '18' %>
    <span><%= I18n.t('views.index.profile') %></span>
  </div>

  <div class="d-flex justify-content-space-between align-items-center mx-auto">
    <div class="mt-3 me-3">
      <%= profile_avatar(current_admin) %>
    </div>

    <div class="">
      <span class="fs-3"><%= current_admin.first_name %></span>
      <span class="fs-3"><%= current_admin.last_name %></span>
      <span class="d-block"><%= current_admin.email %></span>
      <span class="d-block" data-controller="document-number"><%= current_admin.document_number %></span>
    </div>
  </div>

  <%= link_to edit_admin_registration_path, class: "btn btn-secondary mt-5 w-20 mx-auto mb-3", data: { turbo_frame: "modal" } do %>
    <span class="text-uppercase"><%= I18n.t('views.index.edit') %></span>
  <% end %>

</div>
