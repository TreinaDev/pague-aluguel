<%= form_with url: search_path, method: :get do |f| %>
  <div class="d-flex justify-content-center mb-4">
    <%= f.text_field :query, class: 'form-control w-40 me-3', placeholder: 'Busque um condomínio' %>
    <%= f.submit 'Buscar', class: "btn btn-primary" %>
  </div>
<% end %>

<% if @query %>
  <div class="text-center text-muted mb-2 fs-7">
    <%= @query == "" ? "Você precisa buscar por um nome de condomínio" : "Resultados para: #{@query}" %>
  </div>
  <div class="d-flex justify-content-center gap-2 mb-2">
    <% @query_results.each do |condo| %>
      <%= link_to condo_path(condo.id), class: "text-decoration-none" do %>
        <div class="card hover-strong shadow-sm" style="width: 18rem; height: 7rem;">
          <div class="card-body">
            <span class="d-block"><%= condo.name %></span>
            <span class="text-muted fs-8"><%= condo.city %></span>
          </div>
        </div>
      <% end %>
    <% end %>  
  </div>
  <hr>
<% end %>
