<div class="card border-0 rounded-0 bg-off-white mt-4 py-3 px-3 w-49" >

  <div class="text-muted fs-8 mb-3">
    <%= image_tag "user-icon", size: '18' %>
    <span><%= I18n.t('views.show.profile_section_title') %></span>
  </div>

  <div class="border py-3 px-3 rounded-2 shadow-sm">
    <div class="d-flex justify-content-space-between align-items-center mx-auto mb-2">
      <div class="overflow-x-hidden">
        <span class="fs-3"><%= current_property_owner.email %></span>
        <span class="d-block" data-controller="document-number"><%= current_property_owner.document_number %></span>
        <span class="d-block fs-8 text-muted"><%= I18n.t('views.show.since') %>: <%= current_property_owner.created_at.strftime("%d/%m/%Y") %></span>
      </div>
    </div>
  </div>

</div>
