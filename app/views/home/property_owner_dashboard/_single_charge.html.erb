<div class="card border-0 rounded-0 bg-off-white mt-4 py-3 px-3 w-35 align-self-start h-216" >
  <div class="mb-3">
    <%= image_tag "document-bang-icon", size: '25', class: "mb-1" %>
    <span class="text-muted"><%= SingleCharge.model_name.human(count: 2) %></span>
  </div>

  <div class="d-flex align-items-center">
    <%= link_to new_owners_single_charge_path, class: "text-decoration-none btn hover-strong", data: { turbo_frame: "modal" } do %>
      <%= image_tag "plus-icon", size: "18" %>
      <span class="text-muted fs-7 text-uppercase"><%= I18n.t('helpers.submit.add') %></span>
    <% end %>
  </div>
  <div class="d-flex align-items-center">
    <%= link_to owners_single_charges_path, class: "text-decoration-none btn hover-strong" do %>
      <%= image_tag "list-center-icon", size: "18" %>
      <span class="text-muted fs-7 text-uppercase"><%= I18n.t('views.show.see_all') %></span>
    <% end %>
  </div>
</div>
