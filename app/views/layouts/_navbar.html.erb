<nav class="navbar navbar-light bg-light">
  <div class="container-fluid">
    <%= link_to "Home", root_path, class: "navbar-brand" %>

    <% if admin_signed_in? %>
      <%= link_to "Admins", admins_path, class: "nav-link" %>
    <% end %>

    <div class="d-flex">
      <% if admin_signed_in? %>
        <div class="me-4 mt-1">
          <span class="d-block lh-1"><%= current_admin.first_name %> <%= current_admin.last_name %></span>
          <span class="d-block lh-1"><%= current_admin.email %></span>
        </div>
        <%= button_to "Logout", destroy_admin_session_path, method: :delete, class: "btn btn-success" %>
      <% elsif property_owner_signed_in?%>
        <div class="me-4 mt-1">
          <span class="d-block lh-1"><%= current_property_owner.email %></span>
          <span class="d-block lh-1"><%= current_property_owner.document_id %></span>
        </div>
        <%= button_to "Logout", destroy_property_owner_session_path, method: :delete, class: "btn btn-success" %>
      <% else %>
        <%= link_to "Login", new_admin_session_path, class: "btn btn-success" %>
        <%= link_to "Login de Proprietário", new_property_owner_session_path, class: "btn btn-success" %>
        <%= link_to "Registrar-se como Proprietário", new_owner_cpf_validation_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>  
</nav>
