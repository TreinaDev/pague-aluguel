<% if @shared_fee.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <strong>Por favor, corrija os seguintes erros:</strong>
    <ul>
      <% @shared_fee.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <h1>Lan√ßar nova Conta Compartilhada</h1>

  <div class="row">
    <div class="col-md-6">
      <%= form_with model: @shared_fee, url: condo_shared_fees_path, local: true do |f| %> 
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_field :description, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :total_value %>
          <%= f.text_field :total_value, placeholder: '0,00', class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :issue_date %>
          <%= f.date_field :issue_date, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit 'Registrar', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= link_to I18n.t('helpers.buttons.back'), :back, class: "btn btn-secondary" %>
    </div>
  </div>
</div>