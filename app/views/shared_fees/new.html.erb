<% if @shared_fee.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <p><%= I18n.t('errors.messages.verify_error') %></p>
    <ul>
      <% @shared_fee.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="mt-3 card rounded-0 border-0">
  <%= link_to :back, class: "ms-3 mt-3" do %>
    <%= image_tag "arrow-left", size: "25", id: "arrow-left" %>
  <% end %>

  <span class="fs-4 mx-auto mt-3 text-uppercase">
    <%= I18n.t('new.create_shared_fee') %>
  </span>
  <span class="mx-auto text-uppercase fs-7 text-muted"><%= @condo.name %></span>

  <%= form_with model: @shared_fee, url: condo_shared_fees_path, local: true do |f| %>
    <div class="form-floating mb-3 w-50 mx-auto mt-4">
      <%= f.text_field :description, class: "form-control" %>
      <%= f.label :description %>
    </div>

    <div class="form-floating mb-3 w-50 mx-auto">
      <%= f.text_field :total_value, placeholder: '0,00', class: "form-control" %>
      <%= f.label :total_value %>
    </div>

    <div class="form-floating mb-3 w-50 mx-auto">
      <%= f.date_field :issue_date, class: "form-control" %>
      <%= f.label :issue_date %>
    </div>

    <div class="text-center">
      <%= f.submit I18n.t('buttons.submit.register'), class: "btn btn-primary fs-7 text-uppercase ls-3 mb-5" %>
    </div>
  <% end %>
</div>
