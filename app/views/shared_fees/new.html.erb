<% if @shared_fee.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <strong>Por favor, corrija os seguintes erros:</strong>
    <ul>
      <% @shared_fee.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="mt-3 card rounded-0 border-0">
  <span class="fs-5 mx-auto mt-3">CONTA COMPARTILHADA</span>
  <%= form_with model: @shared_fee, local: true do |f| %> 
    <div class="form-floating mb-2 w-50 mx-auto mt-4">
      <%# <%= f.collection_select :condo_id, @condos, :id, :name, selected: @selected_condo_id, class: "form-select" %>
      <%= f.select :condo_id, options_for_select(@condos), { include_blank: true }, class: "form-select" %>
      <%= f.label :condo_id %>
    </div>

    <div class="form-floating mb-2 w-50 mx-auto">
      <%= f.text_field :description, class: "form-control" %>
      <%= f.label :description %>
    </div>

    <div class="form-floating mb-2 w-50 mx-auto">
      <%= f.text_field :total_value, class: "form-control" %>
      <%= f.label :total_value %>
    </div>

    <div class="form-floating mb-2 w-50 mx-auto">
      <%= f.date_field :issue_date, class: "form-control" %>
      <%= f.label :issue_date %>
    </div>

    <div class="d-flex justify-content-center">
      <%= f.submit 'Registrar', class: "btn btn-primary mb-5" %>
    </div>
  <% end %>
</div>
