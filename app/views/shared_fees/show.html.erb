<div class="container">
  <h1>Conta Compartilhada #<%= @shared_fee.id %></h1>

  <div class="row">
    <div class="col-md-6">
      <strong><%= SharedFee.human_attribute_name(:condo_id) %>:</strong> <%= @condo.name %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <strong><%= SharedFee.human_attribute_name(:description) %>:</strong> <%= @shared_fee.description %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <strong><%= SharedFee.human_attribute_name(:issue_date) %>:</strong> <%= I18n.l(@shared_fee.issue_date) %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <strong><%= SharedFee.human_attribute_name(:total_value_cents) %>:</strong> <%= Money.new(@shared_fee.total_value_cents, "BRL").format %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <strong><%= SharedFee.human_attribute_name(:status) %>:</strong> 
      <% if @shared_fee.active? %>
        <strong class="text-success"><%= I18n.t("activerecord.attributes.shared_fee.enum_status.#{@shared_fee.status}") %></strong>
      <% else %>
        <strong class="text-danger"><%= I18n.t("activerecord.attributes.shared_fee.enum_status.#{@shared_fee.status}") %></strong>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <% if @shared_fee.active? %>
      <div class="col-md-6">
        <%= button_to I18n.t('cancel-button'), cancel_condo_shared_fee_path(@condo.id, @shared_fee), class: 'btn btn-danger' %>
      </div>
    <% end %>
    <div class="col-md-6">
      <%= link_to I18n.t('helpers.buttons.back'), condo_shared_fees_path(@condo.id), class: "btn btn-secondary" %>
    </div>
  </div>
</div>
