<div class="card my-4">
  <div class="card-body">
    <h5 class="card-title">Condomínio: <%= @condo.name %></h5>
    <h6 class="card-subtitle mb-2 text-muted">Cidade: <%= @condo.city %></h6>
    <div class="mt-3">
      <%= link_to 'Lançar Conta Compartilhada', new_shared_fee_path(condo_id: @condo.id), class: 'btn btn-primary me-2' %>
      <%= link_to 'Exibir Contas Compartilhadas', shared_fees_path(condo_id: @condo.id), class: 'btn btn-secondary' %>
      <%= link_to 'Cadastrar Nova Taxa', new_condo_base_fee_path(condo_id: @condo.id), class: 'btn btn-primary me-2' %>
      <%= link_to 'Exibir Taxas Cadastradas', condo_base_fees_path(condo_id: @condo.id), class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
