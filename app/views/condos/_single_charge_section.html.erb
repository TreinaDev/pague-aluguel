<div class="card border-0 rounded-0 bg-off-white mt-4 py-3 px-3 w-49" id="single-charge">
  <div class="mb-3">
    <%= image_tag "document-bang-icon", size: '25', class: "mb-1" %>
    <span class="text-muted"><%= I18n.t('activerecord.models.single_charge.other') %></span>
  </div>
  <% if @recent_single_charges.any? %>
    <span class="text-muted text-uppercase fs-7 ms-3 mb-1">recentes</span>
    <div class="list-group w-75 mb-2">
      <% @recent_single_charges.each do |single_charge| %>
        <%= link_to condo_single_charge_path(@condo.id, single_charge), class: "list-group-item p-3 list-group-item-action hover-strong", data: { turbo_frame: "modal" } do %>
          <div class="d-flex w-100 justify-content-between">
            <span class="d-block mb-1 fs-5">
              <%= I18n.t "single_charge.#{single_charge.charge_type}" %>
            </span>
            <div class="d-flex flex-wrap text-end">
              <small class="text-body-secondary w-100">
                <%= SharedFee.human_attribute_name(:issue_date) %>:
                <%= I18n.l(single_charge.issue_date) %>
              </small>
            </div>
          </div>
          <span class="text-muted fs-7 text-lowercase">
            <%= humanized_unit(single_charge.unit_id) %>
            -   <%= single_charge.description %>
          </span>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <div class="d-flex align-items-center">
    <%= link_to new_condo_single_charge_path(@condo.id), class: "text-decoration-none btn hover-strong" do %>
      <%= image_tag "plus-icon", size: "18" %>
      <span class="text-muted fs-7 text-uppercase"><%= I18n.t('buttons.submit.add') %></span>
    <% end %>
  </div>
  <div class="d-flex align-items-center">
    <%= link_to condo_single_charges_path(@condo.id), class: "text-decoration-none btn hover-strong" do %>
      <%= image_tag "list-center-icon", size: "18" %>
      <span class="text-muted fs-7 text-uppercase"><%= I18n.t('buttons.see_all') %></span>
    <% end %>
  </div>
</div>
