<div class="card border-0 rounded-0 bg-off-white mt-4 py-3 px-3 w-49" id="base-fee">
  <div class="mb-3">
    <%= image_tag "document-percent-icon", size: '25', class: "mb-1" %>
    <span class="text-muted"><%= BaseFee.model_name.human(count: 2) %></span>
  </div>
  <% if @recent_base_fees.any? %>
    <span class="text-muted text-uppercase fs-7 ms-3 mb-1">recentes</span>
    <div class="list-group w-75 mb-2">
      <% @recent_base_fees.each do |base_fee| %>
        <%= link_to condo_base_fee_path(@condo.id, base_fee), class: "list-group-item p-3 list-group-item-action hover-strong", data: { turbo_frame: "modal" } do %>
          <div class="d-flex w-100 justify-content-between">
            <span class="d-block mb-1 fs-5">
              <%= base_fee.name %>
            </span>
            <small class="d-block text-body-secondary">
              <%= SharedFee.human_attribute_name(:issue_date) %>:
              <%= I18n.l(base_fee.charge_day.to_date)%>
            </small>
          </div>
          <span class="text-muted fs-7 text-lowercase"><%= BaseFee.human_attribute_name(:recurrence) %></span>
          <span class="text-uppercase fs-7"><%= I18n.t("activerecord.attributes.base_fee.enum_recurrence.#{base_fee.recurrence}") %></span>
        <% end %>
      <% end %>
    </div>
  <% end %>
  
  <div class="d-flex align-items-center">
    <%= link_to new_condo_base_fee_path(@condo.id), class: "text-decoration-none btn hover-strong" do %>
      <%= image_tag "plus-icon", size: "18" %>
      <span class="text-muted fs-7 text-uppercase"><%= I18n.t('helpers.submit.add') %></span>
    <% end %>
  </div>
  <div class="d-flex align-items-center">
    <%= link_to condo_base_fees_path(@condo.id), class: "text-decoration-none btn hover-strong" do %>
      <%= image_tag "list-center-icon", size: "18" %>
      <span class="text-muted fs-7 text-uppercase"><%= I18n.t('views.show.see_all') %></span>
    <% end %>
  </div>
</div>
