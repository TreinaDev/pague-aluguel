<div class="card border-0 rounded-0 bg-off-white mt-4 py-3 px-3 w-49" id="bills_section">
  <div class="mb-3">
    <%= image_tag "bill-icon", size: '25' %>
    <span class="text-muted"><%= I18n.t('activerecord.models.bill.other') %></span>
  </div>
  <% if @recent_bills.any? %>
    <span class="text-muted text-uppercase fs-7 ms-3 mb-1"><%= I18n.t('dashboards.section.recents') %></span>
    <div class="list-group w-75 mb-2">
      <% @recent_bills.each do |bill| %>
        <%= link_to condo_bill_path(@condo.id, bill), class: "list-group-item p-3 list-group-item-action hover-strong", data: { turbo_frame: "modal" } do %>
          <div class="d-flex w-100 justify-content-between">
            <span class="d-block mb-1 fs-5">
              <%= unit_name(bill) %>
            </span>
            <div class="d-flex flex-wrap text-end">
              <small class="text-muted">
                <%= I18n.t('activerecord.attributes.shared_fee.issue_date') %>:
                <%= I18n.l(bill.issue_date) %>
              </small>
            </div>
          </div>
          <span class="text-muted fs-7 text-lowercase"><%= I18n.t('activerecord.attributes.bill.total_value') %></span>
          <span><%= bill.total_value.format %></span>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <div class="d-flex align-items-center">
    <%= link_to condo_bills_path(@condo.id), class: "text-decoration-none btn hover-strong" do %>
      <%= image_tag "list-center-icon", size: "18" %>
      <span class="text-muted fs-7 text-uppercase"><%= I18n.t('buttons.see_all') %></span>
    <% end %>
  </div>
</div>
