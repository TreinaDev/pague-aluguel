<div class="card border-0 rounded-0 bg-off-white mt-4 py-3 px-3 w-49" id="bills_section">
  <div class="mb-3">
    <%= image_tag "bill-icon", size: '25' %>
    <span class="text-muted"><%= Bill.model_name.human(count: 2) %></span>
  </div>
  <div class="d-flex align-items-center">
    <%= link_to condo_bills_path(@condo.id), class: "text-decoration-none btn hover-strong" do %>
      <%= image_tag "list-center-icon", size: "18" %>
      <span class="text-muted fs-7 text-uppercase"><%= I18n.t('views.show.see_all') %></span>
    <% end %>
  </div>
</div>
